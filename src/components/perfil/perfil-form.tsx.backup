// Tipos b√°sicos alinhados ao que a page j√° usa
export type PerfilMin = {
  id?: number;
  nome?: string;
  email?: string;
  role?: 'fundador' | 'afiliado' | 'admin' | 'investidor';
  telefone?: string;
  cep?: string;
  endereco?: string;
  numero?: string;
  complemento?: string;
  bairro?: string;
  cidade?: string;
  uf?: string;
  pais?: string;
  dt_nascimento?: string;
  bio_facial?: string;
  avatar?: string;
  tipo_documento?: string;
  reg_documento?: string;
  documento?: string;
  termos?: boolean;
  status?: string;
  startups?: unknown[];
  indicados?: unknown[];
  fundador?: boolean;
  afiliado?: boolean;
  persent_ganho?: number;
};

// Schema Zod completo para valida√ß√£o do formul√°rio de perfil
const schema = z.object({
  // Dados Pessoais
  nome: z
    .string()
    .min(2, 'Nome deve ter pelo menos 2 caracteres')
    .max(100, 'Nome deve ter no m√°ximo 100 caracteres'),
  dt_nascimento: z
    .string()
    .refine((v) => !Number.isNaN(Date.parse(v)), {
      message: 'Data de nascimento inv√°lida',
    })
    .optional(),

  // Contato
  email: z.string().email('Email inv√°lido'),
  telefone: z.string().min(10, 'Telefone deve ter pelo menos 10 d√≠gitos'),

  // Endere√ßo
  cep: z.string().min(9, 'CEP inv√°lido').optional(),
  endereco: z
    .string()
    .min(3, 'Endere√ßo deve ter pelo menos 3 caracteres')
    .optional(),
  numero: z.string().min(1, 'N√∫mero √© obrigat√≥rio').optional(),
  bairro: z
    .string()
    .min(2, 'Bairro deve ter pelo menos 2 caracteres')
    .optional(),
  cidade: z
    .string()
    .min(2, 'Cidade deve ter pelo menos 2 caracteres')
    .optional(),
  uf: z.string().length(2, 'UF deve ter 2 caracteres').optional(),
  pais: z.string().min(2, 'Pa√≠s deve ter pelo menos 2 caracteres').optional(),

  // Documento de Identifica√ß√£o
  tipo_documento: z.string().min(1, 'Selecione o tipo de documento').optional(),
  reg_documento: z
    .string()
    .min(3, 'N√∫mero do documento deve ter pelo menos 3 caracteres')
    .optional(),
  documento: z.string().url('URL inv√°lida').optional(),

  // Biometria e Avatar
  bio_facial: z.string().url('URL inv√°lida').optional(),

  // Outros
  termos: z.boolean().optional(),
  status: z.string().optional(),

  // Fundador
  fundador: z.boolean().optional(),
  incluir_startup_captacao: z.boolean().optional(),
  termos_fundador: z.boolean().optional(),
});

export type PerfilFormValues = z.infer<typeof schema>;

export type PerfilFormProps = {
  perfil: PerfilMin;
};

export function PerfilForm({ perfil }: PerfilFormProps) {
  const defaultValues = useMemo<PerfilFormValues>(
    () => ({
      nome: perfil?.nome ?? '',
      dt_nascimento: perfil?.dt_nascimento ?? '',
      email: perfil?.email ?? '',
      telefone: perfil?.telefone ?? '',
      cep: perfil?.cep ? perfil.cep.replace(/(\d{5})(\d{3})/, '$1-$2') : '',
      endereco: perfil?.endereco ?? '',
      numero: perfil?.numero ?? '',
      bairro: perfil?.bairro ?? '',
      cidade: perfil?.cidade ?? '',
      uf: perfil?.uf ?? '',
      pais: perfil?.pais ?? 'BRA',
      tipo_documento: perfil?.tipo_documento ?? '',
      documento: perfil?.documento ?? '',
      bio_facial: perfil?.bio_facial ?? '',
      termos: perfil?.termos ?? false,
      status: perfil?.status ?? '',
      fundador: perfil?.fundador ?? false,
      incluir_startup_captacao: false,
      termos_fundador: false,
      reg_documento: perfil?.reg_documento ?? '',
    }),
    [perfil],
  );
  const [IsLoadingPais, setIsLoadingPais] = useState(true);
  const [IsLoadingUf, setIsLoadingUf] = useState(true);

  const methods = useForm<PerfilFormValues>({
    resolver: zodResolver(schema),
    defaultValues,
  });

